    },
    "MadaBoost": {},

    "CatBoost": {
      "depth": [1]
    },
    "XGBoost": {
      "max_depth": [1]
    },
    "LightGBM": {
      "max_depth": [1]
    },
    "FilterBoost": {
      "epsilon" : [0.05],
      "delta" : [0.9],
      "tau" : [0.1]
