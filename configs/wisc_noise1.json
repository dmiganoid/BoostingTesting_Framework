{
  "algorithms": ["AdaBoost", "MadaBoost", "BrownBoost", "FilterBoost", "RealAdaBoost", "LogitBoost", "ModestAdaBoost", "WaterBoost"],

  "estimator": {
    "estimator_type": "stump",
    "estimator_params": { "max_depth": [1] }
  },

