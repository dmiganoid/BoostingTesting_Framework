    },
    "BrownBoost": {
      "c": [ 0.25, 0.5, 0.75 ],
      "convergence_criterion": [0.001]
    },
    "MadaBoost": {},

    "CatBoost": {
      "depth": [1]
    },
    "XGBoost": {
      "max_depth": [1]
    },
    "LightGBM": {
      "max_depth": [1]
    },
    "FilterBoost": {
      "epsilon" : [0.05],
      "delta" : [0.9],
      "tau" : [0.1]
    }
  }
