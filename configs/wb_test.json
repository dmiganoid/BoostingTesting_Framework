{
  "algorithms": ["AdaBoost", "ModestAdaBoost", "WaterBoost", "XWaterBoost"],

  "estimator": {
    "estimator_type": "stump",
    "estimator_params": { "max_depth": [1] }
  },

  "test": {
    "test_size": 0.15,
    "validation_size":0.15,
    "artificial_noise" : 0,
    "retrain" : 3,
    "random_state": 42,
    "N_synthetic_tests": 1,
    "multiprocessing" : 8,
    "use_predefined_datasets": true,
    "predefined_datasets": [
      "banana_quality.csv",
      "cleaned_water_potability.csv",
      "oil-spill.csv",
      "smart_grid_stability_augmented.csv",
      "wisconsin_breast_cancer_prepared.csv",
      "keel_new-thyroid1_prepared.csv",
      "keel_page-blocks0_prepared.csv",
      "keel_segment0_prepared.csv",
      "keel_vehicle3_prepared.csv", 
      "keel_yeast3_prepared.csv",
      "raisin_prepared.csv", 
      "wisconsin_breast_cancer_prepared.csv"
    ]
    },

  "model": {
    "common": {
      "n_estimators": [ 2, 4, 8, 16, 32, 64, 128, 256, 512, 1024],
      "learning_rate":  [ 0.001, 0.032, 0.128, 0.256, 0.512, 1]
    },
    "BrownBoost": {
      "c": [ 0.2, 0.25, 0.35, 0.5, 0.75, 1, 2, 3, 4 ],
      "convergence_criterion": [0.001] 
    },
    "MadaBoost": {},

    "CatBoost": {
      "depth": [1]
    },
    "XGBoost": {
      "max_depth": [1]
    },
    "LightGBM": {
      "max_depth": [1]
    },
    "FilterBoost": {
      "epsilon" : [0.05],
      "delta" : [0.9],
      "tau" : [0.1]
    },
    "GradientBoost": {
      "gpu": false,
      "loss": ["log_loss"]
    },
    "SOWAdaBoost": {
      "gpu": false
    }
  }
}
