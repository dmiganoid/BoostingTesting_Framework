{
  "algorithms": ["ModestAdaBoost", "RealAdaBoost", "LogitBoost", "AdaBoost"],

  "estimator": {
    "estimator_type": "stump",
    "estimator_params": { "max_depth": [1] }
  },

  "test": {
    "test_size": 0.5,
    "random_state": 42,
    "N_synthetic_tests": 1,
    "multiprocessing" : true,
    "use_predefined_datasets": true,
    "predefined_datasets": [
      "dataset-generated-6.csv",  
      "dataset-generated-1.csv",
      "dataset-generated-2.csv",
      "keel_yeast3_prepared.csv",
      "dataset-generated-4.csv",
      "raisin_prepared.csv"
    ] 
  },

  "model": {
    "common": {
      "n_estimators": [ 2, 3, 4, 5, 6, 7, 8, 12, 16, 20, 24, 28, 32, 36, 40, 44, 48, 52, 56, 60, 64],
      "learning_rate": [ 1 ]
    },
    "BrownBoost": {
      "c": [ 0.25, 0.5, 0.75, 1, 2],
      "convergence_criterion": [0.001]
    },
    "MadaBoost": {},

    "CatBoost": {
      "depth": [1]
    },
    "XGBoost": {
      "max_depth": [1]
    },
    "LightGBM": {
      "max_depth": [1]
    },
    "FilterBoost": {
      "epsilon" : [0.05],
      "delta" : [0.9],
      "tau" : [0.1]
    },
    "GradientBoost": {
      "gpu": false,
      "loss": ["log_loss"]
    },
    "SOWAdaBoost": {
      "gpu": false
    }
  }
}
